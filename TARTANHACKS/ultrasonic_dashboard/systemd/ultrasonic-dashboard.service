[Unit]
Description=Ultrasonic Bin Monitoring Backend
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/TartanHacks/TARTANHACKS/ultrasonic_dashboard/backend
Environment=ULTRASONIC_CONFIG_DIR=/home/pi/TartanHacks/TARTANHACKS/ultrasonic_dashboard/config
ExecStart=/home/pi/TartanHacks/TARTANHACKS/ultrasonic_dashboard/backend/.venv/bin/uvicorn src.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
